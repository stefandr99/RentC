@using RentC_MVC.Controllers

@{
    ViewBag.Title = "Month and year";
}

<h2>Enter month and year</h2>


@using (Html.BeginForm("ListMostRentedByMonth2", "Car"))
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Date</h4>
        <hr />

        <div class="form-group">
            <div class="control-label col-md-2">
                <b>Month</b>
            </div>
            <div class="col-md-10">
                <input type="text" name="month" placeholder="01" class="form-control" />
                <span class="field-validation-valid text-danger" 
                      data-valmsg-for="month" 
                      data-valmsg-replace="true">
                </span>
            </div>
        </div>

        <div class="form-group">
            <div class="control-label col-md-2">
                <b>Year</b> 
            </div>
            <div class="col-md-10">
                <input type="text" name="year" placeholder="2020" class="form-control" />
                <span class="field-validation-valid text-danger"
                      data-valmsg-for="year"
                      data-valmsg-replace="true">
                </span>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Submit" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to main menu", "Index", "Home")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
