@model IEnumerable< Tuple<int, RentC_MVC.Models.Customer>>

@{
    ViewBag.Title = "Silver Customers";
}

<h2>Silver Customers</h2>

<p>
    @Html.ActionLink("Back to main page", "Index", "Home")
</p>
<table class="table">
    <tr>
        <th>
            Rents the last 30 days
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Item2.name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Item2.birthDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Item2.location)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Item2.ZIPCode)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Item1)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Item2.name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Item2.birthDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Item2.location)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Item2.ZIPCode)
            </td>
        </tr>
    }

</table>