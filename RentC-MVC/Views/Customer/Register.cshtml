@{
    ViewBag.Title = "Customer Registration";
}
<h1><b>RentC</b></h1>
<h3>Register a new customer</h3>

<form>
    <div class="jumbotron">
        <div class="form-group row">
            <label for="ClientName" class="col-sm-2 col-form-label">Client Name</label>
            <div class="col-sm-10">
                <input type="text" class="form-control is-invalid" id="ClientName" placeholder="Client Name" required>
            </div>
        </div>

        <div class="form-group row">
            <label for="BirthDate" class="col-sm-2 col-form-label">ZIP Code</label>
            <div class="col-sm-10">
                <input type="text" class="form-control is-invalid" id="BirthDate" placeholder="DD/MM/YYYY" required>
            </div>
        </div>

        <div class="form-group row">
            <label for="ZipCode" class="col-sm-2 col-form-label">ZIP Code</label>
            <div class="col-sm-10">
                <input type="email" class="form-control" id="ZipCode" placeholder="ZIP Code">
            </div>
        </div>

        <button class="btn btn-primary" type="submit">Submit</button>
    </div>
</form>